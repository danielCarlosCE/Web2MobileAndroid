<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity" >

    <ImageView
        android:id="@+id/imageBackground1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" />

    <ImageView
        android:id="@+id/legendBox1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/imageBackground1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true" 
        android:minHeight="250dp"/>

    <TextView
        android:id="@+id/text1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/imageBackground1"
        android:layout_alignTop="@+id/legendBox1"
        android:layout_marginTop="14dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:fadeScrollbars="false"
        android:maxLines="6"
        android:scrollbars="vertical"
        android:textColor="#000000"
        android:textSize="25dp" />

    <ImageButton
        android:id="@+id/btnAudio1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:background="@null" />

</RelativeLayout>